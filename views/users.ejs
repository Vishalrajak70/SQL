<!DOCTYPE html>
<html>
<head>
    <title>All Users</title>
</head>
<body>
    <h1>All Users</h1>

    <table border="1" cellpadding="10">
        <tr>
            <th>User ID</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Password</th>
            <th>Action</th>
        </tr>

        <% users.forEach(user => { %>
            <tr>
                <td><%= user.user_id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.password %></td>

                <td>
                    <form method="GET" action="/user/<%= user.user_id %>/edit">
                        <button>Edit Username</button>
                    </form>
                </td>
            </tr>
        <% }) %>

    </table>
</body>
</html>
